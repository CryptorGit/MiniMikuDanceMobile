<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MiniMikuDanceMaui"
             x:Class="MiniMikuDanceMaui.PmxView"
             BackgroundColor="{StaticResource BackgroundColor}">
    <VerticalStackLayout Padding="10" Spacing="6">
        <Label x:Name="WarningLabel"
               Text="PMXモデルが読み込まれていません"
               TextColor="{StaticResource TextColor}"
               IsVisible="False" />
        <CollectionView x:Name="SubMeshList" IsVisible="False">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:SubMeshInfo">
                    <Grid ColumnDefinitions="Auto,* , Auto" Padding="2">
                        <Label Text="{Binding Index}" TextColor="{StaticResource TextColor}" Margin="0,0,8,0" />
                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="{Binding Texture}" TextColor="{StaticResource TextColor}" />
                            <Label Text="{Binding SphereTexture}" TextColor="{StaticResource TextColor}" />
                            <Label Text="{Binding ToonTexture}" TextColor="{StaticResource TextColor}" />
                        </VerticalStackLayout>
                        <Label Grid.Column="2" Text="{Binding Size}" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>
