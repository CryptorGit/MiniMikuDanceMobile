<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:mmd="clr-namespace:MiniMikuDanceMaui"
             x:Class="MiniMikuDanceMaui.MainPage"
             x:DataType="mmd:MainPageViewModel"
             BackgroundColor="Transparent">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File" />
        <MenuBarItem Text="View">

        </MenuBarItem>
        <MenuBarItem Text="Setting">
            <MenuFlyoutItem Text="Open" Clicked="OnSettingMenuTapped" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>
    <AbsoluteLayout x:Name="Root">
        <!-- TopMenu を Overlay より前面に表示するため ZIndex を上げる -->
        <HorizontalStackLayout x:Name="TopMenu" BackgroundColor="{StaticResource MenuBackgroundColor}" Spacing="20" Padding="10,0" HeightRequest="36" ZIndex="10">
            <Label Text="File" TextColor="{StaticResource TextColor}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnFileMenuTapped" />
                </Label.GestureRecognizers>
            </Label>
            <Label Text="View" TextColor="{StaticResource TextColor}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnViewMenuTapped" />
                </Label.GestureRecognizers>
            </Label>
            <Label Text="Setting" TextColor="{StaticResource TextColor}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSettingMenuTapped" />
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
        <Border x:Name="ViewMenu" IsVisible="False" BackgroundColor="{StaticResource BackgroundColor}" Padding="0" ZIndex="20">
            <VerticalStackLayout Spacing="4" Padding="8">
                
                <Label Text="Bone" TextColor="{StaticResource TextColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBoneClicked" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Lighting" TextColor="{StaticResource TextColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLightingClicked" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Pose Editor" TextColor="{StaticResource TextColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPoseEditorClicked" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Morph" TextColor="{StaticResource TextColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMorphClicked" />
                    </Label.GestureRecognizers>
                </Label>
            </VerticalStackLayout>
        </Border>
        <Border x:Name="FileMenu" IsVisible="False" BackgroundColor="{StaticResource BackgroundColor}" Padding="0" ZIndex="20">
            <VerticalStackLayout Spacing="4" Padding="8">
                <Label Text="Import PMX" TextColor="{StaticResource TextColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnOpenInViewerClicked" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Estimate Pose" TextColor="{StaticResource TextColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnEstimatePoseClicked" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Adapt Pose" TextColor="{StaticResource TextColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAdaptPoseClicked" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Save Pose" TextColor="{StaticResource TextColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSavePoseClicked" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Load Pose" TextColor="{StaticResource TextColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLoadPoseClicked" />
                    </Label.GestureRecognizers>
                </Label>
            </VerticalStackLayout>
        </Border>
        <Border x:Name="SettingMenu" IsVisible="False" BackgroundColor="{StaticResource BackgroundColor}" Padding="8" ZIndex="20">
            <VerticalStackLayout Spacing="10">
                <mmd:SettingView x:Name="SettingContent" />
            </VerticalStackLayout>
        </Border>
        <!-- Overlay は BottomRegion より背面に配置しつつ Viewer より前面に表示する -->
        <BoxView x:Name="MenuOverlay" BackgroundColor="Transparent" IsVisible="False" ZIndex="1">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped" />
            </BoxView.GestureRecognizers>
        </BoxView>
        <Border x:Name="PmxImportDialog" IsVisible="False" BackgroundColor="{StaticResource BackgroundColor}" Padding="8" ZIndex="1">
            <ScrollView>
                <VerticalStackLayout Spacing="6">
                <Grid ColumnDefinitions="60,*,Auto" ColumnSpacing="6">
                    <Label Text="Model" TextColor="{StaticResource TextColor}" />
                    <Label x:Name="SelectedModelPath"
                           Grid.Column="1"
                           TextColor="{StaticResource TextColor}"
                           FontSize="14"
                           HorizontalOptions="FillAndExpand"
                           LineBreakMode="CharacterWrap"
                           MaxLines="2" />
                    <Button Grid.Column="2" Text="参照" Clicked="OnSelectPmxModelClicked" />
                </Grid>
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                    <Button Text="インポート" Clicked="OnImportPmxClicked" />
                    <Button Text="キャンセル" Clicked="OnCancelImportClicked" />
                </HorizontalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </Border>
        <Border x:Name="PoseSelectMessage" IsVisible="False" BackgroundColor="{StaticResource BackgroundColor}" Padding="8" ZIndex="30">
            <VerticalStackLayout Spacing="6">
                <Label Text="動画ファイルを以下から選択してください" TextColor="{StaticResource TextColor}" />
                <Label x:Name="SelectedVideoPath" TextColor="{StaticResource TextColor}" FontSize="14" />
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                    <Button Text="Start" Clicked="OnStartEstimateClicked" />
                    <Button Text="キャンセル" Clicked="OnCancelEstimateClicked" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>
        <Border x:Name="AdaptSelectMessage" IsVisible="False" BackgroundColor="{StaticResource BackgroundColor}" Padding="8" ZIndex="30">
            <VerticalStackLayout Spacing="6">
                <Label Text="ポーズファイルを以下から選択してください" TextColor="{StaticResource TextColor}" />
                <Label x:Name="SelectedPosePath" TextColor="{StaticResource TextColor}" FontSize="14" />
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                    <Button Text="適用" Clicked="OnStartAdaptClicked" />
                    <Button Text="キャンセル" Clicked="OnCancelAdaptClicked" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>
        <mmd:AddKeyPanel x:Name="AddKeyPanel" IsVisible="False" ZIndex="30" />
        <mmd:EditKeyPanel x:Name="EditKeyPanel" IsVisible="False" ZIndex="30" />
        <mmd:KeyDeletePanel x:Name="DeletePanel" IsVisible="False" ZIndex="30" />
        <Border x:Name="ProgressFrame" IsVisible="False" BackgroundColor="{StaticResource BackgroundColor}" Padding="8" ZIndex="30">
            <VerticalStackLayout Spacing="4">
                <Label x:Name="ExtractProgressLabel" Text="" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="Center" />
                <ProgressBar x:Name="ExtractProgressBar" Progress="0" HeightRequest="4" />
                <Label x:Name="PoseProgressLabel" Text="" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="Center" />
                <ProgressBar x:Name="PoseProgressBar" Progress="0" HeightRequest="4" />
            </VerticalStackLayout>
        </Border>
        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="True" IsVisible="False" Color="{StaticResource IndicatorColor}" ZIndex="30" />
        <skia:SKGLView x:Name="Viewer" HasRenderLoop="True" EnableTouchEvents="True" MaximumWidthRequest="2048" MaximumHeightRequest="2048" />
        <Grid x:Name="BottomRegion" BackgroundColor="{StaticResource BackgroundColor}" IsVisible="False" ZIndex="40">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <ScrollView Orientation="Horizontal">
                    <HorizontalStackLayout x:Name="BottomTabBar" Spacing="8" Padding="8" BackgroundColor="{StaticResource MenuBackgroundColor}" />
                </ScrollView>
                <Label Text="×" Grid.Column="1" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCloseBottomTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>
            <ContentView x:Name="BottomContent" Grid.Row="1" />
        </Grid>
    </AbsoluteLayout>
</ContentPage>
