<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniMikuDanceMaui.ExplorerView"
             BackgroundColor="#1E1E1E">
    <Grid RowDefinitions="40,*">
        <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto" Padding="8" x:Name="TopBar">
            <Label Text="↑" TextColor="White" Margin="0,0,16,0" VerticalTextAlignment="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnUpClicked" />
                </Label.GestureRecognizers>
            </Label>
            <Label Text="⟳" Grid.Column="1" TextColor="White" VerticalTextAlignment="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnReloadClicked" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>
        <CollectionView Grid.Row="1" x:Name="FileList" SelectionMode="Single" SelectionChanged="OnItemSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="* , Auto , Auto" Padding="2">
                        <Label Text="{Binding Name}" TextColor="White" />
                        <Label Grid.Column="1" Text="{Binding Modified, StringFormat='{0:yyyy/MM/dd HH:mm}'}" TextColor="White" Margin="10,0" />
                        <Label Grid.Column="2" Text="{Binding SizeText}" TextColor="White" HorizontalTextAlignment="End" WidthRequest="80" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView>
