<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MiniMikuDanceMaui.DebugScenes"
             x:Class="MiniMikuDanceMaui.DebugScenes.ImporterAuditScene"
             x:DataType="local:ImporterAuditScene"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="6">
            <Button Text="CSV書き出し" Clicked="OnExportCsvClicked" />
            <Label Text="Bones" TextColor="{StaticResource TextColor}" />
            <CollectionView x:Name="BoneList">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Label Text="{Binding .}" TextColor="{StaticResource TextColor}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="Morphs" TextColor="{StaticResource TextColor}" />
            <CollectionView x:Name="MorphList">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Label Text="{Binding .}" TextColor="{StaticResource TextColor}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="RigidBodies" TextColor="{StaticResource TextColor}" />
            <CollectionView x:Name="RigidBodyList">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Label Text="{Binding .}" TextColor="{StaticResource TextColor}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="Joints" TextColor="{StaticResource TextColor}" />
            <CollectionView x:Name="JointList">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Label Text="{Binding .}" TextColor="{StaticResource TextColor}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
