<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniMikuDanceMaui.SettingView"
             BackgroundColor="#1E1E1E">
    <VerticalStackLayout Spacing="10" Padding="10">
        <Label Text="Bottom Region Width" TextColor="White"/>
        <Slider x:Name="WidthSlider" Minimum="0.5" Maximum="1"
                ValueChanged="OnWidthChanged"/>
        <Label Text="Camera Sensitivity" TextColor="White"/>
        <Slider x:Name="CameraSlider" Minimum="0.5" Maximum="3"
                ValueChanged="OnCameraChanged"/>
    </VerticalStackLayout>
</ContentView>
