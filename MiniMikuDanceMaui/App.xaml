<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             x:Class="MiniMikuDanceMaui.App">
     <Application.Resources>
        <ResourceDictionary>
            <!-- 配色テーマ -->
            <Color x:Key="BackgroundColor">#1E1E1E</Color>
            <Color x:Key="MenuBackgroundColor">#2A2A2A</Color>
            <Color x:Key="OverlayBackgroundColor">#88000000</Color>
            <Color x:Key="TextColor">#FFFFFF</Color>
            <Color x:Key="IndicatorColor">Blue</Color>
            <Color x:Key="RecordButtonColor">Red</Color>

            <!-- Timeline colors -->
            <Color x:Key="TimelineGridLineColor">#003A4D</Color>
            <Color x:Key="TimelineEvenRowColor">#151515</Color>
            <Color x:Key="TimelineOddRowColor">#202020</Color>
            <Color x:Key="TimelineSelectionColor">#006680</Color>

            <!-- サイズ設定 -->
            <x:Double x:Key="RowHeight">48</x:Double>
        </ResourceDictionary>
     </Application.Resources>
 </Application>
