<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniMikuDanceMaui.App">
    <Application.Resources>
        <Color x:Key="BackgroundColor">
            <AppThemeBinding Light="#FFFFFF" Dark="#1E1E1E" />
        </Color>
        <Color x:Key="OverlayBackgroundColor">
            <AppThemeBinding Light="#88000000" Dark="#88000000" />
        </Color>
        <Color x:Key="TextColor">
            <AppThemeBinding Light="#000000" Dark="#FFFFFF" />
        </Color>
    </Application.Resources>
</Application>
