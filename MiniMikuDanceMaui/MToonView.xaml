<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniMikuDanceMaui.MToonView"
             BackgroundColor="#1E1E1E">
    <VerticalStackLayout Spacing="10" Padding="10">
        <Label Text="Shade Shift" TextColor="White"/>
        <Slider x:Name="ShadeShiftSlider" Minimum="-1" Maximum="1"
                ValueChanged="OnShadeShiftChanged"/>
        <Label Text="Shade Toony" TextColor="White"/>
        <Slider x:Name="ShadeToonySlider" Minimum="0" Maximum="1"
                ValueChanged="OnShadeToonyChanged"/>
        <Label Text="Rim Intensity" TextColor="White"/>
        <Slider x:Name="RimIntensitySlider" Minimum="0" Maximum="1"
                ValueChanged="OnRimIntensityChanged"/>
    </VerticalStackLayout>
</ContentView>
