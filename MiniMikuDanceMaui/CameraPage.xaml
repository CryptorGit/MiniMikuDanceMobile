<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="MiniMikuDanceMaui.CameraPage"
             BackgroundColor="Transparent">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File" />
        <MenuBarItem Text="Edit" />
        <MenuBarItem Text="Selection" />
        <MenuBarItem Text="View">
            <MenuFlyoutItem Text="HOME" Clicked="OnHomeClicked" />
            <MenuFlyoutItem Text="SELECT" Clicked="OnSelectClicked" />
            <MenuFlyoutItem Text="POSE" Clicked="OnPoseClicked" />
            <MenuFlyoutItem Text="MOTION" Clicked="OnMotionClicked" />
            <MenuFlyoutItem Text="AR" Clicked="OnArClicked" />
            <MenuFlyoutItem Text="RECORD" Clicked="OnRecordClicked" />
            <MenuFlyoutItem Text="RESET CAMERA" Clicked="OnResetCamClicked" />
            <MenuFlyoutItem Text="SETTING" Clicked="OnSettingClicked" />
            <MenuFlyoutItem Text="EXPLORER" Clicked="OnExplorerClicked" />
        </MenuBarItem>
        <MenuBarItem Text="Help" />
    </ContentPage.MenuBarItems>
    <AbsoluteLayout x:Name="Root">
        <skia:SKGLView x:Name="Viewer" HasRenderLoop="True" EnableTouchEvents="True" />
        <Grid x:Name="BottomRegion" BackgroundColor="#1E1E1E" IsVisible="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <HorizontalStackLayout x:Name="BottomTabBar" Spacing="8" Padding="8" BackgroundColor="#2A2A2A" />
            <ContentView x:Name="BottomContent" Grid.Row="1" />
        </Grid>
    </AbsoluteLayout>
</ContentPage>
