<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="MiniMikuDanceMaui.CameraPage"
             BackgroundColor="Transparent">
    <AbsoluteLayout x:Name="Root">
        <skia:SKGLView x:Name="Viewer" HasRenderLoop="True" EnableTouchEvents="True" />
        <BoxView x:Name="MenuOverlay" BackgroundColor="#00000033" IsVisible="False" />
        <Grid x:Name="LowerPaneBody" BackgroundColor="#222">
            <!-- small grab/gradient bar -->
            <BoxView HeightRequest="8"
         VerticalOptions="Start"
         InputTransparent="True">
                <!-- lets touches fall through -->
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#00000000" Offset="0" />
                        <GradientStop Color="#00000066" Offset="1" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>
        </Grid>
        <AbsoluteLayout x:Name="StickPad" WidthRequest="120" HeightRequest="120">
            <Border x:Name="ShutterBtn" WidthRequest="88" HeightRequest="88"
                    StrokeThickness="2" Stroke="#FFFFFF" BackgroundColor="Transparent"
                    StrokeShape="RoundRectangle 44"
                    AbsoluteLayout.LayoutBounds="0.5,0.5,88,88"
                    AbsoluteLayout.LayoutFlags="PositionProportional" />
            <BoxView x:Name="ShutterInner" WidthRequest="70" HeightRequest="70"
                     CornerRadius="35" Color="White" ZIndex="1"
                     AbsoluteLayout.LayoutBounds="0.5,0.5,70,70"
                     AbsoluteLayout.LayoutFlags="PositionProportional" />
            <!-- tap areas -->
            <BoxView x:Name="StickLeftArea" Color="Transparent"
                     AbsoluteLayout.LayoutBounds="0,0,60,120"
                     AbsoluteLayout.LayoutFlags="None" />
            <BoxView x:Name="StickRightArea" Color="Transparent"
                     AbsoluteLayout.LayoutBounds="60,0,60,120"
                     AbsoluteLayout.LayoutFlags="None" />
            <BoxView x:Name="StickTopArea" Color="Transparent"
                     AbsoluteLayout.LayoutBounds="0,0,120,60"
                     AbsoluteLayout.LayoutFlags="None" />
            <BoxView x:Name="StickBottomArea" Color="Transparent"
                     AbsoluteLayout.LayoutBounds="0,60,120,60"
                     AbsoluteLayout.LayoutFlags="None" />
        </AbsoluteLayout>
        <Button x:Name="MenuButton" Text="&#x2630;" WidthRequest="56" HeightRequest="56" BackgroundColor="Transparent" />
        <ContentView x:Name="Sidebar" BackgroundColor="#1E1E1EEB">
            <VerticalStackLayout Padding="20" Spacing="16">
                <Button x:Name="ImportBtn" Text="IMPORT" />
                <Button x:Name="PoseBtn" Text="POSE" />
                <Button x:Name="MotionBtn" Text="MOTION" />
                <Button x:Name="ArBtn" Text="AR" />
                <Button x:Name="RecordBtn" Text="RECORD" />
                <Button x:Name="ResetCamBtn" Text="RESET CAMERA" />
                <Button x:Name="SettingBtn" Text="SETTING" />
            </VerticalStackLayout>
        </ContentView>
    </AbsoluteLayout>
</ContentPage>
