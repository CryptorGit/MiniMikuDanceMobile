<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:mmd="clr-namespace:MiniMikuDanceMaui"
             x:Class="MiniMikuDanceMaui.CameraPage"
             BackgroundColor="Transparent">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File" />
        <MenuBarItem Text="Edit" />
        <MenuBarItem Text="Selection" />
        <MenuBarItem Text="View" />
        <MenuBarItem Text="Help" />
    </ContentPage.MenuBarItems>
    <AbsoluteLayout x:Name="Root">
        <HorizontalStackLayout x:Name="TopMenu" BackgroundColor="#2A2A2A" Spacing="20" Padding="10,0" HeightRequest="36" ZIndex="1">
            <Label Text="File" TextColor="White"/>
            <Label Text="Edit" TextColor="White"/>
            <Label Text="Selection" TextColor="White"/>
            <Label Text="View" TextColor="White">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnViewMenuTapped" />
                </Label.GestureRecognizers>
            </Label>
            <Label Text="Setting" TextColor="White">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSettingMenuTapped" />
                </Label.GestureRecognizers>
            </Label>
            <Label Text="Help" TextColor="White"/>
        </HorizontalStackLayout>
        <Frame x:Name="ViewMenu" IsVisible="False" BackgroundColor="#1E1E1E" Padding="0" ZIndex="2">
            <VerticalStackLayout Spacing="4" Padding="8">
                <Button Text="HOME" Clicked="OnHomeClicked" />
                <Button Text="SELECT" Clicked="OnSelectClicked" />
                <Button Text="POSE" Clicked="OnPoseClicked" />
                <Button Text="MOTION" Clicked="OnMotionClicked" />
                <Button Text="AR" Clicked="OnArClicked" />
                <Button Text="RECORD" Clicked="OnRecordClicked" />
                <Button Text="RESET CAMERA" Clicked="OnResetCamClicked" />
                <Button Text="EXPLORER" Clicked="OnExplorerClicked" />
            </VerticalStackLayout>
        </Frame>
        <Frame x:Name="SettingMenu" IsVisible="False" BackgroundColor="#1E1E1E" Padding="8" ZIndex="2">
            <VerticalStackLayout Spacing="10">
                <mmd:SettingView x:Name="SettingContent" />
            </VerticalStackLayout>
        </Frame>
        <skia:SKGLView x:Name="Viewer" HasRenderLoop="True" EnableTouchEvents="True" />
        <Grid x:Name="BottomRegion" BackgroundColor="#1E1E1E" IsVisible="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout x:Name="BottomTabBar" Spacing="8" Padding="8" BackgroundColor="#2A2A2A" />
            </ScrollView>
            <ContentView x:Name="BottomContent" Grid.Row="1" />
        </Grid>
    </AbsoluteLayout>
</ContentPage>
