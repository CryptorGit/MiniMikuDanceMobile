<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniMikuDanceMaui.CameraPage">
    <AbsoluteLayout x:Name="Root">
        <ContentView x:Name="Viewer" BackgroundColor="Black" />
        <Button x:Name="FsToggleBtn" Text="⤢" WidthRequest="56" HeightRequest="56"
                BackgroundColor="#3D3D3D" TextColor="White" CornerRadius="6" />
        <ScrollView x:Name="ModeCarousel" Orientation="Horizontal">
            <HorizontalStackLayout x:Name="ModeStack" Spacing="0" />
        </ScrollView>
        <!-- モードバーと下ペインの境界ライン -->
        <BoxView x:Name="ModeSeparator" HeightRequest="1" BackgroundColor="#0000004D" />
        <Grid x:Name="LowerPaneBody" BackgroundColor="#222">
            <BoxView HeightRequest="8" VerticalOptions="Start" IsHitTestVisible="False">
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#00000000" Offset="0" />
                        <GradientStop Color="#00000066" Offset="1" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>
        </Grid>
        <Button x:Name="ShutterBtn" WidthRequest="96" HeightRequest="96"
                BackgroundColor="White" CornerRadius="48"
                Stroke="#FFFFFF33" StrokeThickness="1" />
        <ContentView x:Name="Sidebar" BackgroundColor="#1E1E1EEB" />
    </AbsoluteLayout>
</ContentPage>
