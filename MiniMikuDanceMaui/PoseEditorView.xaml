<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MiniMikuDanceMaui"
             x:Class="MiniMikuDanceMaui.PoseEditorView"
             x:DataType="local:PoseEditorViewModel"
             BackgroundColor="{StaticResource BackgroundColor}">
    <VerticalStackLayout Padding="10" Spacing="10">
        <HorizontalStackLayout Spacing="10">
            <Button x:Name="CameraModeButton" Text="Camera" Clicked="OnCameraClicked"
                    TextColor="{StaticResource TextColor}" />
            <Button x:Name="BoneModeButton" Text="Bone" Clicked="OnBoneClicked"
                    TextColor="{StaticResource TextColor}" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Spacing="6">
            <Label Text="IKボーン半径" TextColor="{StaticResource TextColor}" VerticalOptions="Center" />
            <Entry x:Name="IkBoneRadiusEntry" Text="0.05" WidthRequest="60"
                   TextColor="{StaticResource TextColor}" Keyboard="Numeric"
                   Completed="OnIkBoneRadiusEntryCompleted" />
        </HorizontalStackLayout>
        <ScrollView>
            <VerticalStackLayout x:Name="IkGoalList" Spacing="4" />
        </ScrollView>
        <Button Text="IKゴール追加" Clicked="OnAddIkGoalClicked"
                TextColor="{StaticResource TextColor}" />
    </VerticalStackLayout>
</ContentView>
