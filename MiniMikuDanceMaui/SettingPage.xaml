<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniMikuDanceMaui.SettingPage"
             BackgroundColor="Transparent">
    <AbsoluteLayout x:Name="Root">
        <StackLayout x:Name="Content" VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
        </StackLayout>
        <BoxView x:Name="MenuOverlay" BackgroundColor="#00000033" IsVisible="False" />
        <Button x:Name="MenuButton" Text="&#x2630;" WidthRequest="56" HeightRequest="56" BackgroundColor="Transparent" />
        <ContentView x:Name="Sidebar" BackgroundColor="#1E1E1EEB">
            <VerticalStackLayout Padding="20" Spacing="16">
                <Button x:Name="HomeBtn" Text="HOME" TextColor="White" />
                <Button x:Name="SettingBtn" Text="SETTING" TextColor="White" />
            </VerticalStackLayout>
        </ContentView>
    </AbsoluteLayout>
</ContentPage>
