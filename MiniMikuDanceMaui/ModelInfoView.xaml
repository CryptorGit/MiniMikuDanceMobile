<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniMikuDanceMaui.ModelInfoView"
             BackgroundColor="Transparent">
    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" Padding="2" RowSpacing="4">
        <Label Text="頂点数" TextColor="{StaticResource TextColor}" />
        <Label x:Name="VertexCount" Grid.Column="1" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="End" />
        <Label Grid.Row="1" Text="ボーン数" TextColor="{StaticResource TextColor}" />
        <Label x:Name="BoneCount" Grid.Column="1" Grid.Row="1" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="End" />
        <Label Grid.Row="2" Text="モーフ数" TextColor="{StaticResource TextColor}" />
        <Label x:Name="MorphCount" Grid.Column="1" Grid.Row="2" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="End" />
    </Grid>
</ContentView>
