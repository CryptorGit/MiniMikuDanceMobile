<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniMikuDanceMaui.LightingView"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="10">
            <Grid ColumnDefinitions="*,60" RowSpacing="2">
                <Label Text="Shade Shift" TextColor="{StaticResource TextColor}" Grid.Column="0" />
                <Label x:Name="ShadeShiftValue" Text="0" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="End" Grid.Column="1" />
            </Grid>
            <Slider x:Name="ShadeShiftSlider" Minimum="-1" Maximum="1"
                    ValueChanged="OnShadeShiftChanged"/>
            <Grid ColumnDefinitions="*,60" RowSpacing="2">
                <Label Text="Shade Toony" TextColor="{StaticResource TextColor}" Grid.Column="0" />
                <Label x:Name="ShadeToonyValue" Text="0" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="End" Grid.Column="1" />
            </Grid>
            <Slider x:Name="ShadeToonySlider" Minimum="0" Maximum="1"
                    ValueChanged="OnShadeToonyChanged"/>
            <Grid ColumnDefinitions="*,60" RowSpacing="2">
                <Label Text="Rim Intensity" TextColor="{StaticResource TextColor}" Grid.Column="0" />
                <Label x:Name="RimIntensityValue" Text="0" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="End" Grid.Column="1" />
            </Grid>
            <Slider x:Name="RimIntensitySlider" Minimum="0" Maximum="1"
                    ValueChanged="OnRimIntensityChanged"/>
            <Grid ColumnDefinitions="*,60" RowSpacing="2">
                <Label Text="Sphere Strength" TextColor="{StaticResource TextColor}" Grid.Column="0" />
                <Label x:Name="SphereStrengthValue" Text="0" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="End" Grid.Column="1" />
            </Grid>
            <Slider x:Name="SphereStrengthSlider" Minimum="0" Maximum="1"
                    ValueChanged="OnSphereStrengthChanged"/>
            <Grid ColumnDefinitions="*,60" RowSpacing="2">
                <Label Text="Toon Strength" TextColor="{StaticResource TextColor}" Grid.Column="0" />
                <Label x:Name="ToonStrengthValue" Text="0" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="End" Grid.Column="1" />
            </Grid>
            <Slider x:Name="ToonStrengthSlider" Minimum="0" Maximum="1"
                    ValueChanged="OnToonStrengthChanged"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
