<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MiniMikuDanceMaui"
             x:Class="MiniMikuDanceMaui.IKView"
             BackgroundColor="{StaticResource BackgroundColor}">
    <VerticalStackLayout>
        <Picker x:Name="BonePicker" WidthRequest="140" SelectedIndexChanged="OnBoneSelected" />
        <ScrollView>
            <VerticalStackLayout x:Name="BoneList" Spacing="10" Padding="10" />
        </ScrollView>
        <HorizontalStackLayout Padding="10" Spacing="10">
            <Button Text="Left Leg IK" Clicked="OnLeftLegIkClicked" />
            <Button Text="Right Leg IK" Clicked="OnRightLegIkClicked" />
            <Button Text="Left Arm IK" Clicked="OnLeftArmIkClicked" />
            <Button Text="Right Arm IK" Clicked="OnRightArmIkClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
