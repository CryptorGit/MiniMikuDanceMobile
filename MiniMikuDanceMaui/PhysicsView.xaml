<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniMikuDanceMaui.PhysicsView"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="10">
            <Label x:Name="GravityLabel" TextColor="{StaticResource TextColor}" />
            <Label x:Name="SolverLabel" TextColor="{StaticResource TextColor}" />
            <Label x:Name="SubstepLabel" TextColor="{StaticResource TextColor}" />
            <Label x:Name="DampingLabel" TextColor="{StaticResource TextColor}" />
            <Label x:Name="BoneBlendLabel" TextColor="{StaticResource TextColor}" />
            <Label x:Name="GroundHeightLabel" TextColor="{StaticResource TextColor}" />
            <Label x:Name="RestitutionLabel" TextColor="{StaticResource TextColor}" />
            <Label x:Name="FrictionLabel" TextColor="{StaticResource TextColor}" />
            <Label x:Name="LockTranslationLabel" TextColor="{StaticResource TextColor}" />
            <CollectionView x:Name="RigidBodyList" SelectionMode="None">
                <CollectionView.Header>
                    <Grid ColumnSpacing="5" ColumnDefinitions="120,120,80,80,120,120,80,80,80,80">
                        <Label Text="剛体名" TextColor="{StaticResource TextColor}" />
                        <Label Grid.Column="1" Text="ボーン名" TextColor="{StaticResource TextColor}" />
                        <Label Grid.Column="2" Text="タイプ" TextColor="{StaticResource TextColor}" />
                        <Label Grid.Column="3" Text="形状" TextColor="{StaticResource TextColor}" />
                        <Label Grid.Column="4" Text="サイズ" TextColor="{StaticResource TextColor}" />
                        <Label Grid.Column="5" Text="オフセット" TextColor="{StaticResource TextColor}" />
                        <Label Grid.Column="6" Text="質量" TextColor="{StaticResource TextColor}" />
                        <Label Grid.Column="7" Text="減衰" TextColor="{StaticResource TextColor}" />
                        <Label Grid.Column="8" Text="反発" TextColor="{StaticResource TextColor}" />
                        <Label Grid.Column="9" Text="摩擦" TextColor="{StaticResource TextColor}" />
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnSpacing="5" ColumnDefinitions="120,120,80,80,120,120,80,80,80,80">
                            <Label Text="{Binding Name}" TextColor="{StaticResource TextColor}" />
                            <Label Grid.Column="1" Text="{Binding Bone}" TextColor="{StaticResource TextColor}" />
                            <Label Grid.Column="2" Text="{Binding Type}" TextColor="{StaticResource TextColor}" />
                            <Label Grid.Column="3" Text="{Binding Shape}" TextColor="{StaticResource TextColor}" />
                            <Label Grid.Column="4" Text="{Binding Size}" TextColor="{StaticResource TextColor}" />
                            <Label Grid.Column="5" Text="{Binding Offset}" TextColor="{StaticResource TextColor}" />
                            <Label Grid.Column="6" Text="{Binding Mass}" TextColor="{StaticResource TextColor}" />
                            <Label Grid.Column="7" Text="{Binding Damping}" TextColor="{StaticResource TextColor}" />
                            <Label Grid.Column="8" Text="{Binding Restitution}" TextColor="{StaticResource TextColor}" />
                            <Label Grid.Column="9" Text="{Binding Friction}" TextColor="{StaticResource TextColor}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
