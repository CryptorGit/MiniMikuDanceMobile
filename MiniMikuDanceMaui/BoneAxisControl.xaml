<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniMikuDanceMaui.BoneAxisControl">
    <VerticalStackLayout Spacing="2">
        <!-- 列幅を可変にして小さい画面でも見切れないよう調整 -->
        <Grid ColumnDefinitions="*,Auto,Auto" RowSpacing="0">
            <HorizontalStackLayout Grid.Column="0" Spacing="2" VerticalOptions="Center">
                <Label x:Name="TypeLabel" Text="Rot" TextColor="{StaticResource TextColor}" />
                <Label x:Name="AxisLabel" Text="X" TextColor="{StaticResource TextColor}" />
                <Label x:Name="ValueLabel" Text="0" TextColor="{StaticResource TextColor}" WidthRequest="40" />
            </HorizontalStackLayout>
        <HorizontalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
            <Label Text="Min:" TextColor="{StaticResource TextColor}" VerticalOptions="Center" />
            <Label x:Name="MinLabel" Text="0" TextColor="{StaticResource TextColor}" WidthRequest="40" />
            <Label Text="Max:" TextColor="{StaticResource TextColor}" VerticalOptions="Center" />
            <Label x:Name="MaxLabel" Text="0" TextColor="{StaticResource TextColor}" WidthRequest="40" />
        </HorizontalStackLayout>
            <Button x:Name="ResetButton" Text="Reset" Grid.Column="2" Clicked="OnResetClicked" VerticalOptions="Center" />
        </Grid>
        <Slider x:Name="Slider" Minimum="-180" Maximum="180" ValueChanged="OnSliderChanged" />
    </VerticalStackLayout>
</ContentView>
