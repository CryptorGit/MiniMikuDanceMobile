<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MiniMikuDanceMaui"
             x:Class="MiniMikuDanceMaui.MorphView"
             BackgroundColor="{StaticResource BackgroundColor}">
    <CollectionView ItemsSource="{Binding Morphs}" Padding="10">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="local:MorphItem">
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,60" RowSpacing="2">
                    <Label Text="{Binding Name}" TextColor="{DynamicResource TextColor}" />
                    <Label Grid.Column="1"
                           Text="{Binding Value, StringFormat='{0:F2}'}"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="End" />
                    <Slider Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Minimum="0"
                            Maximum="1"
                            Value="{Binding Value, Mode=TwoWay}" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentView>
