<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniMikuDanceMaui.BoneView"
             BackgroundColor="#1E1E1E">
    <ScrollView>
    <VerticalStackLayout Spacing="10" Padding="10">
        <Picker x:Name="BonePicker" Title="Bone" SelectedIndexChanged="OnBoneSelected"/>
        <HorizontalStackLayout Spacing="10">
            <Button Text="Reset" Clicked="OnResetClicked" />
        </HorizontalStackLayout>
        <Grid ColumnDefinitions="*,Auto,Auto">
            <Grid Grid.Column="0" ColumnDefinitions="80,*">
                <Label Text="Rotate X" TextColor="White" Grid.Column="0" />
                <Label x:Name="LabelX" Text="0" TextColor="White" HorizontalTextAlignment="End" Grid.Column="1" />
            </Grid>
            <Picker x:Name="CenterXPicker" Grid.Column="1" SelectedIndexChanged="OnCenterXChanged" />
            <Picker x:Name="RangeXPicker" Grid.Column="2" SelectedIndexChanged="OnRangeXChanged" />
        </Grid>
        <Slider x:Name="SliderX" Minimum="-180" Maximum="180" ValueChanged="OnXChanged" />
        <Grid ColumnDefinitions="*,Auto,Auto">
            <Grid Grid.Column="0" ColumnDefinitions="80,*">
                <Label Text="Rotate Y" TextColor="White" Grid.Column="0" />
                <Label x:Name="LabelY" Text="0" TextColor="White" HorizontalTextAlignment="End" Grid.Column="1" />
            </Grid>
            <Picker x:Name="CenterYPicker" Grid.Column="1" SelectedIndexChanged="OnCenterYChanged" />
            <Picker x:Name="RangeYPicker" Grid.Column="2" SelectedIndexChanged="OnRangeYChanged" />
        </Grid>
        <Slider x:Name="SliderY" Minimum="-180" Maximum="180" ValueChanged="OnYChanged" />
        <Grid ColumnDefinitions="*,Auto,Auto">
            <Grid Grid.Column="0" ColumnDefinitions="80,*">
                <Label Text="Rotate Z" TextColor="White" Grid.Column="0" />
                <Label x:Name="LabelZ" Text="0" TextColor="White" HorizontalTextAlignment="End" Grid.Column="1" />
            </Grid>
            <Picker x:Name="CenterZPicker" Grid.Column="1" SelectedIndexChanged="OnCenterZChanged" />
            <Picker x:Name="RangeZPicker" Grid.Column="2" SelectedIndexChanged="OnRangeZChanged" />
        </Grid>
        <Slider x:Name="SliderZ" Minimum="-180" Maximum="180" ValueChanged="OnZChanged" />
        <HorizontalStackLayout Spacing="10">
            <Label Text="Position X" TextColor="White"/>
            <Label x:Name="LabelTX" Text="0" TextColor="White" />
        </HorizontalStackLayout>
        <Entry x:Name="CenterTXEntry" Text="0" Keyboard="Numeric" WidthRequest="60" HorizontalOptions="Center" Completed="OnCenterTXEntryChanged" />
        <Slider x:Name="SliderTX" Minimum="-1" Maximum="1" ValueChanged="OnTXChanged"/>
        <HorizontalStackLayout Spacing="10">
            <Label Text="Position Y" TextColor="White"/>
            <Label x:Name="LabelTY" Text="0" TextColor="White" />
        </HorizontalStackLayout>
        <Entry x:Name="CenterTYEntry" Text="0" Keyboard="Numeric" WidthRequest="60" HorizontalOptions="Center" Completed="OnCenterTYEntryChanged" />
        <Slider x:Name="SliderTY" Minimum="-1" Maximum="1" ValueChanged="OnTYChanged"/>
        <HorizontalStackLayout Spacing="10">
            <Label Text="Position Z" TextColor="White"/>
            <Label x:Name="LabelTZ" Text="0" TextColor="White" />
        </HorizontalStackLayout>
        <Entry x:Name="CenterTZEntry" Text="0" Keyboard="Numeric" WidthRequest="60" HorizontalOptions="Center" Completed="OnCenterTZEntryChanged" />
        <Slider x:Name="SliderTZ" Minimum="-1" Maximum="1" ValueChanged="OnTZChanged"/>
    </VerticalStackLayout>
    </ScrollView>
</ContentView>
