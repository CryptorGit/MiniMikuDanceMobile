<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniMikuDanceMaui.BoneView"
             BackgroundColor="#1E1E1E">
    <ScrollView>
    <VerticalStackLayout Spacing="10" Padding="10">
        <Picker x:Name="BonePicker" Title="Bone" SelectedIndexChanged="OnBoneSelected"/>
        <HorizontalStackLayout Spacing="10">
            <Button Text="Reset" Clicked="OnResetClicked" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Spacing="10">
            <Label Text="Rotate X" TextColor="White"/>
            <Label x:Name="LabelX" Text="0" TextColor="White" />
        </HorizontalStackLayout>
        <Entry x:Name="RangeXEntry" Text="180" Keyboard="Numeric" WidthRequest="60" HorizontalOptions="Center" Completed="OnRangeXEntryChanged" />
        <Slider x:Name="SliderX" Minimum="-180" Maximum="180" ValueChanged="OnXChanged"/>
        <HorizontalStackLayout Spacing="10">
            <Label Text="Rotate Y" TextColor="White"/>
            <Label x:Name="LabelY" Text="0" TextColor="White" />
        </HorizontalStackLayout>
        <Entry x:Name="RangeYEntry" Text="180" Keyboard="Numeric" WidthRequest="60" HorizontalOptions="Center" Completed="OnRangeYEntryChanged" />
        <Slider x:Name="SliderY" Minimum="-180" Maximum="180" ValueChanged="OnYChanged"/>
        <HorizontalStackLayout Spacing="10">
            <Label Text="Rotate Z" TextColor="White"/>
            <Label x:Name="LabelZ" Text="0" TextColor="White" />
        </HorizontalStackLayout>
        <Entry x:Name="RangeZEntry" Text="180" Keyboard="Numeric" WidthRequest="60" HorizontalOptions="Center" Completed="OnRangeZEntryChanged" />
        <Slider x:Name="SliderZ" Minimum="-180" Maximum="180" ValueChanged="OnZChanged"/>
        <HorizontalStackLayout Spacing="10">
            <Label Text="Position X" TextColor="White"/>
            <Label x:Name="LabelTX" Text="0" TextColor="White" />
        </HorizontalStackLayout>
        <Entry x:Name="RangeTXEntry" Text="1" Keyboard="Numeric" WidthRequest="60" HorizontalOptions="Center" Completed="OnRangeTXEntryChanged" />
        <Slider x:Name="SliderTX" Minimum="-1" Maximum="1" ValueChanged="OnTXChanged"/>
        <HorizontalStackLayout Spacing="10">
            <Label Text="Position Y" TextColor="White"/>
            <Label x:Name="LabelTY" Text="0" TextColor="White" />
        </HorizontalStackLayout>
        <Entry x:Name="RangeTYEntry" Text="1" Keyboard="Numeric" WidthRequest="60" HorizontalOptions="Center" Completed="OnRangeTYEntryChanged" />
        <Slider x:Name="SliderTY" Minimum="-1" Maximum="1" ValueChanged="OnTYChanged"/>
        <HorizontalStackLayout Spacing="10">
            <Label Text="Position Z" TextColor="White"/>
            <Label x:Name="LabelTZ" Text="0" TextColor="White" />
        </HorizontalStackLayout>
        <Entry x:Name="RangeTZEntry" Text="1" Keyboard="Numeric" WidthRequest="60" HorizontalOptions="Center" Completed="OnRangeTZEntryChanged" />
        <Slider x:Name="SliderTZ" Minimum="-1" Maximum="1" ValueChanged="OnTZChanged"/>
    </VerticalStackLayout>
    </ScrollView>
</ContentView>
