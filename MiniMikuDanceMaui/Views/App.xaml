<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             x:Class="MiniMikuDanceMaui.Views.App">
     <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- サイズ設定 -->
            <x:Double x:Key="RowHeight">44</x:Double>
            <x:Double x:Key="HalfRowHeight">22</x:Double>
        </ResourceDictionary>
     </Application.Resources>
 </Application>
