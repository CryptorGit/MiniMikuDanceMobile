<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MiniMikuDanceMaui.ViewModels"
             x:Class="MiniMikuDanceMaui.Views.LightingView"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ContentView.BindingContext>
        <vm:LightingViewModel />
    </ContentView.BindingContext>
    <VerticalStackLayout Spacing="10" Padding="10">
        <Grid ColumnDefinitions="*,60" RowSpacing="2">
            <Label Text="Shade Shift" TextColor="{StaticResource TextColor}" Grid.Column="0" />
            <Label Text="{Binding ShadeShift, StringFormat='{0:F2}'}" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="End" Grid.Column="1" />
        </Grid>
        <Slider Minimum="-1" Maximum="1" Value="{Binding ShadeShift, Mode=TwoWay}" />
        <Grid ColumnDefinitions="*,60" RowSpacing="2">
            <Label Text="Shade Toony" TextColor="{StaticResource TextColor}" Grid.Column="0" />
            <Label Text="{Binding ShadeToony, StringFormat='{0:F2}'}" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="End" Grid.Column="1" />
        </Grid>
        <Slider Minimum="0" Maximum="1" Value="{Binding ShadeToony, Mode=TwoWay}" />
        <Grid ColumnDefinitions="*,60" RowSpacing="2">
            <Label Text="Rim Intensity" TextColor="{StaticResource TextColor}" Grid.Column="0" />
            <Label Text="{Binding RimIntensity, StringFormat='{0:F2}'}" TextColor="{StaticResource TextColor}" HorizontalTextAlignment="End" Grid.Column="1" />
        </Grid>
        <Slider Minimum="0" Maximum="1" Value="{Binding RimIntensity, Mode=TwoWay}" />
    </VerticalStackLayout>
</ContentView>
