<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="MiniMikuDanceMaui.TimeLineView"
             x:Name="Root"
             BackgroundColor="{DynamicResource BackgroundColor}">
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- キー操作領域 -->
        <Grid Grid.Row="0" x:Name="KeyButtons" Padding="8" ColumnDefinitions="*,*,*,*">
            <Button Text="Add Bone" Clicked="OnAddBoneClicked" Grid.Column="0" />
            <Button Text="Add Key" Clicked="OnAddKeyClicked" Grid.Column="1" />
            <Button Text="Edit Key" Clicked="OnEditClicked" Grid.Column="2" />
            <Button Text="Delete Key" Clicked="OnDeleteClicked" Grid.Column="3" />
        </Grid>
        <!-- タイムライン操作領域 -->
        <Grid Grid.Row="1" ColumnDefinitions="Auto,*" Padding="8" VerticalOptions="Center">
            <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                <Button Text="▶" Clicked="OnPlayClicked" />
                <Button Text="⏸" Clicked="OnPauseClicked" />
                <Button Text="⏹" Clicked="OnStopClicked" />
            </HorizontalStackLayout>
            <skia:SKCanvasView x:Name="TimeSlider" Grid.Column="1" HeightRequest="40"
                               EnableTouchEvents="True" PaintSurface="OnSliderPaintSurface"
                               Touch="OnSliderTouched" />
        </Grid>
        <!-- タイムライン表示領域 -->
        <ScrollView Grid.Row="2" x:Name="Scroll" Orientation="Horizontal">
            <Grid x:Name="TimeGrid" ColumnDefinitions="*,3*" RowSpacing="2" />
        </ScrollView>

        <!-- オーバーレイ -->
        <ContentView x:Name="Overlay" IsVisible="False" BackgroundColor="{DynamicResource OverlayBackgroundColor}" Grid.RowSpan="3" ZIndex="10">
            <Frame x:Name="OverlayContent" Padding="8" BackgroundColor="{DynamicResource BackgroundColor}" HorizontalOptions="End" VerticalOptions="Start">
                <Grid>
                    <!-- ボーン追加ウィンドウ -->
                    <VerticalStackLayout x:Name="AddBoneWindow" Spacing="6" IsVisible="False">
                        <Picker x:Name="AddBoneOnlyPicker" Title="Bone" SelectedIndexChanged="OnAddBoneInputChanged" />
                        <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                            <Button Text="追加" Clicked="OnAddBoneConfirmClicked" IsEnabled="{Binding AddBoneValid, Source={x:Reference Root}}" />
                            <Button Text="キャンセル" Clicked="OnCancelClicked" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    <!-- キー追加ウィンドウ -->
                    <VerticalStackLayout x:Name="AddWindow" Spacing="6" IsVisible="False">
                        <Picker x:Name="AddKeyBonePicker" Title="Bone" SelectedIndexChanged="OnAddInputChanged" />
                        <Entry x:Name="AddTimeEntry" Placeholder="Frame" Keyboard="Numeric" TextChanged="OnAddInputChanged" />
                        <Grid ColumnDefinitions="*,60">
                            <Slider x:Name="AddSeqSlider" Minimum="0" Maximum="100" ValueChanged="OnAddSeqChanged" />
                            <Entry x:Name="AddSeqEntry" Grid.Column="1" WidthRequest="60" Keyboard="Numeric" />
                        </Grid>
                        <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                            <Button Text="追加" Clicked="OnAddConfirmClicked" IsEnabled="{Binding AddValid, Source={x:Reference Root}}" />
                            <Button Text="キャンセル" Clicked="OnCancelClicked" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    <!-- 編集ウィンドウ -->
                    <VerticalStackLayout x:Name="EditWindow" Spacing="6" IsVisible="False">
                        <Picker x:Name="EditBonePicker" Title="Bone" SelectedIndexChanged="OnEditInputChanged" />
                        <Entry x:Name="EditTimeEntry" Placeholder="Frame" Keyboard="Numeric" TextChanged="OnEditInputChanged" />
                        <Grid ColumnDefinitions="*,60">
                            <Slider x:Name="EditSeqSlider" Minimum="0" Maximum="100" ValueChanged="OnEditSeqChanged" />
                            <Entry x:Name="EditSeqEntry" Grid.Column="1" WidthRequest="60" Keyboard="Numeric" />
                        </Grid>
                        <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                            <Button Text="適用" Clicked="OnEditConfirmClicked" IsEnabled="{Binding EditValid, Source={x:Reference Root}}" />
                            <Button Text="キャンセル" Clicked="OnCancelClicked" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    <!-- 削除ウィンドウ -->
                    <VerticalStackLayout x:Name="DeleteWindow" Spacing="6" IsVisible="False">
                        <Picker x:Name="DeleteBonePicker" Title="Bone" SelectedIndexChanged="OnDeleteBoneChanged" />
                        <Picker x:Name="DeleteTimePicker" Title="Time" />
                        <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                            <Button Text="削除" Clicked="OnDeleteConfirmClicked" />
                            <Button Text="キャンセル" Clicked="OnCancelClicked" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Grid>
            </Frame>
        </ContentView>
    </Grid>
</ContentView>
