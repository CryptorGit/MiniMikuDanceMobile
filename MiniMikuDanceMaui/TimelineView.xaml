<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniMikuDanceMaui.TimelineView"
             BackgroundColor="#1E1E1E">
    <VerticalStackLayout Spacing="6" Padding="10">
        <HorizontalStackLayout Spacing="10">
            <Button x:Name="PlayButton" Text="▶" Clicked="OnPlayClicked" />
            <Button x:Name="AddKeyButton" Text="＋" Clicked="OnAddKeyClicked" />
            <Slider x:Name="TimelineSlider" Minimum="0" Maximum="0" ValueChanged="OnSliderChanged"
                    HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>
        <ScrollView x:Name="TimelineScrollView" Orientation="Horizontal" HorizontalScrollBarVisibility="Always">
            <HorizontalStackLayout x:Name="FrameContainer" Spacing="2" />
        </ScrollView>
    </VerticalStackLayout>
</ContentView>
