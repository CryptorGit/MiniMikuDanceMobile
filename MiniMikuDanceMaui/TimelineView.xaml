<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="MiniMikuDanceMaui.TimelineView"
             BackgroundColor="#1E1E1E">
    <Grid RowDefinitions="*,2*">
        <!-- Top region: 3D viewer and keyframe input panel -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <!-- 3D viewer with floor grid -->
            <skia:SKGLView x:Name="PreviewViewer" Grid.Column="0" />
            <!-- Keyframe edit panel -->
            <VerticalStackLayout x:Name="KeyInputPanel" Grid.Column="1" Spacing="6" Padding="10" IsVisible="False">
                <Entry x:Name="BoneEntry" Placeholder="Bone" />
                <HorizontalStackLayout Spacing="4">
                    <Button x:Name="FrameBackButton" Text="-5" />
                    <Entry x:Name="FrameEntry" WidthRequest="60" Keyboard="Numeric" />
                    <Button x:Name="FrameForwardButton" Text="+5" />
                </HorizontalStackLayout>
                <Entry x:Name="PosXEntry" Placeholder="Pos X" Keyboard="Numeric" />
                <Entry x:Name="PosYEntry" Placeholder="Pos Y" Keyboard="Numeric" />
                <Entry x:Name="PosZEntry" Placeholder="Pos Z" Keyboard="Numeric" />
                <Entry x:Name="RotXEntry" Placeholder="Rot X" Keyboard="Numeric" />
                <Entry x:Name="RotYEntry" Placeholder="Rot Y" Keyboard="Numeric" />
                <Entry x:Name="RotZEntry" Placeholder="Rot Z" Keyboard="Numeric" />
                <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                    <Button x:Name="ConfirmButton" Text="確定" />
                    <Button x:Name="CancelButton" Text="キャンセル" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>
        <!-- Bottom region: timeline UI -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*" ColumnDefinitions="100,*" ColumnSpacing="6" RowSpacing="6" Padding="10">
            <HorizontalStackLayout Grid.Row="0" Grid.ColumnSpan="2" Spacing="10">
                <Button x:Name="PlayButton" Text="▶" Clicked="OnPlayClicked" />
                <Button x:Name="ZoomInButton" Text="+" />
                <Button x:Name="ZoomOutButton" Text="-" />
                <Button x:Name="AddToneButton" Text="＋" Clicked="OnAddToneClicked" />
                <Slider x:Name="TimelineSlider" Minimum="0" Maximum="0" ValueChanged="OnSliderChanged" HorizontalOptions="FillAndExpand" />
            </HorizontalStackLayout>
            <ScrollView Grid.Row="1" Grid.Column="0" Orientation="Vertical">
                <VerticalStackLayout x:Name="BoneList" Spacing="4" />
            </ScrollView>
            <ScrollView Grid.Row="1" Grid.Column="1" Orientation="Both">
                <Grid x:Name="TimelinePanel">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid x:Name="FrameHeader" Grid.Row="0" ColumnSpacing="4" />
                    <Grid x:Name="TimelineGrid" Grid.Row="1" RowSpacing="4" ColumnSpacing="4" />
                </Grid>
            </ScrollView>
        </Grid>
    </Grid>
</ContentView>
