<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniMikuDanceMaui.TimelineView"
             BackgroundColor="{StaticResource BackgroundColor}">
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="{StaticResource RowHeight}" />
            <RowDefinition Height="{StaticResource RowHeight}" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 1段目: 操作ボタン -->
        <Grid Grid.Row="0" ColumnDefinitions="*,*,*,*" Padding="4" ColumnSpacing="4">
            <Button Text="ADDBONE" Grid.Column="0" />
            <Button Text="ADDKEY" Grid.Column="1" />
            <Button Text="EDITKEY" Grid.Column="2" />
            <Button Text="DELEKEY" Grid.Column="3" />
        </Grid>

        <!-- 2段目: 左右1:3の領域 -->
        <Grid Grid.Row="1" ColumnDefinitions="1*,3*" Padding="4" ColumnSpacing="4">
            <!-- 左側領域 -->
            <ContentView BackgroundColor="{StaticResource MenuBackgroundColor}" />
            <!-- 右側領域 -->
            <ContentView Grid.Column="1" BackgroundColor="{StaticResource SurfaceDarkColor}" />
        </Grid>

        <!-- 3段目: 縦スクロール可能領域 -->
        <ScrollView Grid.Row="2" Orientation="Vertical">
            <Grid x:Name="TimelineGrid" ColumnDefinitions="1*,3*" RowSpacing="0">
                <Grid x:Name="LeftFixedGrid" BackgroundColor="{StaticResource MenuBackgroundColor}" />
                <ScrollView x:Name="RightScroll" Grid.Column="1" Orientation="Horizontal">
                    <Grid x:Name="RightContentGrid" RowSpacing="0" />
                </ScrollView>
            </Grid>
        </ScrollView>
    </Grid>
</ContentView>
